<%= simple_form_for @profile do |f| %>

<div class="row" data-match-height>
<h1>Profile</h1>
  <div class="large-8 columns" >
    <%= f.file_field :avatar %>
    <%= f.submit 'Save' %>
  </div>
  <div class="large-4 columns" >
    <%= image_tag @profile.avatar.url(:medium), id: "previewHolder", height: '200', width: '200', alt: 'avatar', align: "right" %>
  </div>
</div>

<% end %>
