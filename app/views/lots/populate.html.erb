<ul class="small-block-grid-3 medium-block-grid-4 large-block-grid-6">
  <% @lot_products.each do |prod| %>
      <li style="position: relative; width: 300px; height: 500px;" >
        <ul class="pricing-table">
        <li class="title"><%= prod.title %></li>
        <li class="price">$<%= prod.price %></li>
        <li class="bullet-item">
          <div style="height: 200px">
            <%= image_tag prod.product_images.first.photo.url(:medium) %>
          </div>
        </li>

        <li class="cta-button">
          <ul class="button-group radius">
            <li><a href="#" class="button tiny">Edit</a></li>
            <li><a href="#" class="button tiny">Clone</a></li>
            <li><a href="#" class="button tiny">Delete</a></li>
          </ul>
        </li>
        </ul>
      </li>
  <% end %>
  <li style="position: relative; width: 250px; height: 280px;" >
    <%= link_to image_tag("new_product.jpeg", :border => 0), {:action => 'new', :controller => 'products', :lot_id => @lot.id} %>
  </li>

</ul>
