<div class="row">
  <h1> <%= @lot.title %></h1>
</div>
<div class="row">
  <div class="small-8 columns">
    <h3> Description: </h3>
      <%= markdown(@lot.description).html_safe %>
    <h3> Conditions: </h3>
      <%= markdown(@lot.condition).html_safe %>
  </div>
  <div class="small-4 columns">
    <table>
      <tr>
        <td><%=fa_icon("clock-o lg")%> Duration: </td>
        <td> <%= @lot.duration %> days</td>
      </tr>
      <tr>
        <td><%=fa_icon("truck lg") %> Delivery time  </td>
        <td><%= @lot.delivery_time %> days</td>
      </tr>
      <tr>
        <td>$ Activation sum  </td>
        <td> <%= number_to_currency(@lot.min_order, :unit => '$') %> </td>
      </tr>
      <tr>
        <td>% Prepay </td>
        <td><%= @lot.prepay %> %</td>
      </tr>
      <tr>
        <td><%=fa_icon("gift lg") %> Product count </td>
        <td><%= @lot_products.count %> </td>
      </tr>
    </table>
    <div style="float: left; width: auto;">
    <%= link_to({controller: 'lots', action: "edit", id: @lot.id}, {class: "button round secondary"}) do %>
        <%=fa_icon("edit lg")%> Edit lot
    <% end %>
    </div>

    <% if @lot_products.count > 0 %>
        <% if @lot.requests_collection? %>
            <%= button_to({controller: 'lots', action: 'change_status', method: :post, id: @lot.id, status: "forming"}, {class: "button round alert"}) do %>
                <%=fa_icon("flag lg")%> Stop lot!
            <% end %>
        <% else %>
            <%= button_to({controller: 'lots', action: "change_status", method: :post, id: @lot.id, status: "requests_collection"}, {class: "button round success"}) do %>
                <%=fa_icon("rocket lg")%> Start lot!
            <% end %>
        <% end %>

    <% end%>

  </div>

</div>
<%= render 'populate_form' %>
