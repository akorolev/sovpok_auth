<%= simple_form_for(@address) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :street1 %>
    <%= f.input :street2 %>
    <%= f.input :suburb %>
    <%= f.input :city %>
    <%= f.input :postcode %>
    <%= f.input :phone %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
