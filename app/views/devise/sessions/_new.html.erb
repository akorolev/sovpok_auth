  <h3> Log in </h3>

  <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:role => 'form' }, :remote => true, wrapper: :label_hor) do |f| %>
      <%= f.input :email, :required => true, :input_html => {maxlength: 40, size: 18} %>
      <%= f.input :password, :required => true, :input_html => {maxlength: 40, size: 18} %>

      <%= content_tag :div, class: "row collapse" do %>
        <%= content_tag :div, class: "small-2 columns" do %>
          <p></p>
        <% end %>
        <%= content_tag :div, class: "small-10 columns" do %>

          <%= f.check_box :remember_me %> <%= f.label :remember_me %>
          <br>
          <%= link_to 'Sign up ', new_registration_path(resource_name), :remote => true , :class=> "right" %>
          <br>
          <%= link_to "Forgot password?", new_password_path(resource_name)  , :class=> "right"%>
        <% end %>
      <% end %>
      <%= f.submit 'Sign in', :class => 'button radius' %>

  <% end %>
<hr>

  <%- if devise_mapping.omniauthable? %>
    <p> Sign in with your Facebook account </p>

    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= link_to "<i class='fa fa-facebook fa-lg'></i> &nbsp; Connect with Facebook".html_safe, "omniauth_authorize_path(resource_name, provider)", class: "button radius social-login" %><br />
    <% end -%>
  <% end -%>


