<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :pickup_allowed %>
    <%= f.input :pickup_description %>
    <%= f.input :postage_val1 %>
    <%= f.input :postage_info1 %>
    <%= f.input :postage_val2 %>
    <%= f.input :postage_info2 %>
    <%= f.input :postage_val3 %>
    <%= f.input :postage_info3 %>

    <%= f.simple_fields_for :product_images do |builder| %>
	  <% if builder.object.new_record? %>
	    <%= builder.input :caption, label:"Image Caption" %>
		<%= builder.input :photo, as: :file, label:"Image File" %>
	  <% end %>
    <% end %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
